<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

    <body>
        <%- include('./partials/header') %>

            <main>
                <div class="user-detail container">
                    <section class="top main-content">
                        <img class="profile" src="https://via.placeholder.com/100x100" alt="">
                        <div class="info-usuario">
                            <p><%=usuario.usuario.nombre%></p>
                            <p><%=usuario.usuario.apellido%></p>
                            <p><%=usuario.usuario.fecha_nac%></p>
                            <a class="follow" href="/usuarios/editProfile"><i class="fa-solid fa-user-gear"></i></a>
                            <ul class="meta">
                                <li>100 post</li>
                                <li>200 seguidores</li>
                                <li>300 seguidos</li>
                            </ul>
                        </div>
                    </section>
                    <section class="bottom">
                    <% for( let i=0; i < usuario.posteo.length; i++ ) { %>
                        <article class="post">
                            <a href="/posteos/detallePost/id/<%= usuario.posteo[i].id %>">
                                <img src="/images/<%= usuario.posteo[i].imagen %>" alt="">
                            </a>
                            <p><%= usuario.posteo[i].pie %></p>
                        </article>
                        <% } %>
                   
                    </section>
                </div>
            </main>

            <%- include('./partials/footer') %>

    </body>

</html>