<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head') %>

<body>
    <% if (usuarioLogueado) { %>
        <%- include('./partials/headerLogueado') %>
    <% } else { %>
        <%- include('./partials/headerDeslogueado') %>
    <% } %>

    <main>
        <section class="center main-content">
            <% for( let i=0; i < posteo.length; i++ ) { %>
                <article class="post">
                    <div class="info-usuario ">
                        <img src="<%= posteo[i].posteoUsuario.foto%>" alt="">
                        <h4>
                            <a href='/usuarios/detalleUsuario/id/<%= posteo[i].posteoUsuario.id_usuario %>'> <%= posteo[i].posteoUsuario.nombre%></a>
                        </h4>
                    </div>
                
                    <div class="post-body">
                        <a href="/posteos/detallePost/id/<%= posteo[i].id_post %>">
                            <img src="<%= posteo[i].foto %>" alt="">
                        </a>
                        <h4><strong><%= posteo[i].posteoUsuario.nombre%></strong>: <%= posteo[i].pie%></h4>
                    </div>
                        
                    <ul class="post-reacciones">
                        <li>
                            <i class="fa-regular fa-heart"></i>
                        </li>
                        <li>
                            <i class="fa-regular fa-comment"></i>
                        </li>
                    </ul>
                
                   <div class="post-comentarios">
                        <h4>Comentarios</h4>
                            <% for( let j=0; j < 3; j++ ) { %>
                                <h4><strong> <%= posteo[i].posteoComentario[j].comentarioUsuario.nombre%></strong>: <%= posteo[i].posteoComentario[j].texto %></h4>
                            <% } %>
                    </div> 
                </article>
            <% } %>        
        </section>
    </main>

    <%- include('./partials/footer') %>

</body>

</html>